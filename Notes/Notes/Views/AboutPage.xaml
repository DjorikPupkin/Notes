<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.AboutPage"
             Title="Steam">
    
    <!-- Layout children in two rows -->
    <Grid RowDefinitions="Auto,*">

        <Label Text="Adskiy Djorik" FontSize="52" VerticalOptions="Center" HorizontalOptions="Center" Margin="15 0 0 0"></Label>  
        
        <!-- Layout children vertically -->
        <StackLayout Grid.Row="1" Margin="{StaticResource PageMargin}" Spacing="20">

            <Label FontSize="28" TextColor="Azure">
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Text="Notes" FontAttributes="Bold" FontSize="28" />
                            <Span Text=" v1.7" />
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            
            <Label Text="This is my steam, go to Dota 2" />

            <Button Text="My Steam" FontSize="26" TextColor="#D72323" FontAttributes="Bold" Margin="15 0 0 0" Clicked="OnButtonClicked" />
            
            <Image Source="Steam.ico" HeightRequest="200" WidthRequest="200" Margin="20 0 0 0"></Image>

        </StackLayout>
        
    </Grid>
    
</ContentPage>